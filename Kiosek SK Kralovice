    <section class="card">
      <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:8px">
        <h2>Účtenka</h2>
        <button id="clearAll" class="clear">Vynulovat vše</button>
      </div>
      <div id="bill" class="bill"><div style="padding:14px;color:#94a3b8">Zatím nic nepřidáno</div></div>
      <div class="footer"><span>Celkem</span><span id="total">0 Kč</span></div>
    </section>
  </div>

  <script>
    (function(){
      function fmt(n){ return n.toLocaleString('cs-CZ') + ' Kč'; }
      function uid(){ return Math.random().toString(36).slice(2); }

      var items = [];
      var bill = document.getElementById('bill');
      var totalEl = document.getElementById('total');
      var clearBtn = document.getElementById('clearAll');
      var productButtons = document.querySelectorAll('.btn[data-name][data-price]');

      function renderBill(){
        if(items.length === 0){
          bill.innerHTML = '<div style="padding:14px;color:#94a3b8">Zatím nic nepřidáno</div>';
          totalEl.textContent = '0 Kč';
          return;
        }
        bill.innerHTML = '';
        for(var i=0;i<items.length;i++){
          var it = items[i];
          var row = document.createElement('div');
          row.className = 'row';
          row.innerHTML = '<div><span class="idx">'+(i+1)+'</span>'+it.name+'</div>' +
                          '<div><span>'+fmt(it.price)+'</span> ' +
                          '<button class="remove">Odebrat</button></div>';
          (function(id){
            row.querySelector('.remove').addEventListener('click', function(){
              removeItem(id);
            }, false);
          })(it.uid);
          bill.appendChild(row);
        }
        totalEl.textContent = fmt(total());
      }

      function total(){
        var s = 0;
        for(var i=0;i<items.length;i++) s += items[i].price;
        return s;
      }

      function addItem(name, price){
        items.push({ uid: uid(), name: name, price: Number(price) });
        renderBill();
      }

      function removeItem(id){
        for(var i=0;i<items.length;i++){
          if(items[i].uid === id){ items.splice(i,1); break; }
        }
        renderBill();
      }

      for(var i=0;i<productButtons.length;i++){
        (function(btn){
          btn.addEventListener('click', function(){
            addItem(btn.getAttribute('data-name'), btn.getAttribute('data-price'));
          }, false);
        })(productButtons[i]);
      }

      clearBtn.addEventListener('click', function(){
        items = [];
        renderBill();
      }, false);
    })();
  </script>
